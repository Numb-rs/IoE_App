<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/favorite_website_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WebsiteName"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_download_website_favorite"
        android:background="@drawable/download"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button_open_website_favorite"
        android:layout_toStartOf="@+id/button_open_website_favorite"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/button_open_website_favorite"
        android:background="@drawable/arrow_right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"/>


</RelativeLayout>