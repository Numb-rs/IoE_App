<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_height="96dp"
        android:layout_width="96dp"
        android:background="@drawable/message"
        android:id="@+id/button_messages"
        android:onClick="onClickMessenger"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/browser"
        android:layout_height="96dp"
        android:layout_width="96dp"
        android:id="@+id/button_browser"
        android:onClick="onClickBrowser"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp" />

    <Button
        android:layout_height="96dp"
        android:onClick="onClickDownloads"
        android:id="@+id/button_downloads"
        android:layout_width="96dp"
        android:background="@drawable/download"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_download"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_above="@id/button_downloads"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView_download_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_messages"
        android:textSize="20sp"
        android:layout_above="@id/button_messages"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView_message_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_browser"
        android:textSize="20sp"
        android:layout_above="@id/button_browser"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView_browser_button"/>

</RelativeLayout>